<!DOCTYPE html>
<html lang="en">
  <head>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
      body { font-family: 'Inter', sans-serif; }
    </style>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gray-50 text-gray-900">

    <!-- Navbar -->
    <nav class="fixed top-0 left-0 w-full bg-white shadow z-20 py-3 px-6 flex items-center justify-between">
      <span class="text-xl font-bold tracking-tight text-blue-700">PostSphere</span>
      <a href="/" class="bg-blue-700 hover:bg-blue-800 text-white px-4 py-2 rounded-lg font-semibold transition shadow">Sign up</a>
    </nav>
    <div class="pt-20"></div>
    
    
    <!-- Login Card -->
    <div class="relative z-10 w-full max-w-md p-4 sm:p-8 bg-white/90 backdrop-blur-md rounded-xl shadow-xl border border-gray-200">
      <h2 class="text-3xl font-bold mb-6 text-center text-gray-800">Login to Your Account</h2>

      <form action="/login" method="post" class="space-y-5">
        <!-- Email -->
        <div>
          <input
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 bg-white text-gray-900 placeholder-gray-500"
            type="email"
            id="email"
            name="email"
            placeholder="you@example.com"
            required
          />
        </div>

        <!-- Password -->
        <div>
          <input
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 bg-gray-50"
            type="password"
            id="password"
            name="password"
            placeholder="password"
            required
          />
        </div>

        <!-- Submit Button -->
        <input
          type="submit"
          value="Login"
          class="w-full py-3 bg-indigo-500 text-white rounded-lg font-semibold hover:bg-indigo-600 transition"
        />
      </form>
      <div class="text-center mt-4">
        <a href="/forgot-password" class="text-blue-600 hover:underline text-sm">Forgot password?</a>
      </div>
    </div>

    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <% if (typeof message !== 'undefined' && message) { %>
      <script>
        Toastify({
          text: "<%= message %>",
          duration: 4000,
          gravity: "top",
          position: "right",
          backgroundColor: "#4f46e5"
        }).showToast();
      </script>
    <% } %>
  </body>
</html>
